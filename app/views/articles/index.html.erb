<h1>Articles</h1>

<div id="articles">
<% @articles.each do |article| %>
  <h2><%= link_to article.name, article %></h2>
  <%= simple_format article.content %>
  <% if article.photo? %>
  	<%= image_tag article.photo.url(:thumb) %>
  <% end %>
  
<% end %>
</div>

<p><%= link_to "New Article", new_article_path %></p>
